# Polymarket Copy Trader - Environment Variables
# Copy this file to .env and customize for your deployment

# Target wallet address to copy trades from (required)
# COPY_TRADER_TARGET_WALLET=0x1234567890abcdef1234567890abcdef12345678

# Starting budget in USD
# COPY_TRADER_BUDGET=10000

# Run in dry-run (simulation) mode: true/false
# COPY_TRADER_DRY_RUN=true

# Check interval in seconds
# COPY_TRADER_CHECK_INTERVAL=30

# Auto-execute trades without confirmation: true/false
# COPY_TRADER_AUTO_EXECUTE=false

# Log level: DEBUG, INFO, WARNING, ERROR
# COPY_TRADER_LOG_LEVEL=INFO

# Discord webhook URL for notifications (optional)
# COPY_TRADER_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Database path
# COPY_TRADER_DB_PATH=trades.db

# Position sizing
# COPY_TRADER_MAX_POSITION_PCT=0.15
# COPY_TRADER_MIN_POSITION_PCT=0.01

# Risk management
# COPY_TRADER_MAX_DAILY_LOSS_PCT=0.10
# COPY_TRADER_MAX_TOTAL_LOSS_PCT=0.25

# Market filters
# COPY_TRADER_MIN_LIQUIDITY=1000

# API settings
# COPY_TRADER_API_MAX_RETRIES=3
# COPY_TRADER_API_TIMEOUT=30

# Config file path (if not using default config.yaml)
# COPY_TRADER_CONFIG_PATH=config.yaml

# Google Sheets Dashboard
# Enable real-time dashboard sync to Google Sheets
# COPY_TRADER_SHEETS_ENABLED=true
# Google Sheet ID (from URL: https://docs.google.com/spreadsheets/d/[SHEET_ID]/edit)
# COPY_TRADER_SHEETS_ID=your-google-sheet-id
# Path to service account JSON credentials file
# COPY_TRADER_SHEETS_CREDENTIALS=/path/to/service-account.json
